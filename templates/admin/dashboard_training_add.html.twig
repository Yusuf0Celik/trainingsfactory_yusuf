{% extends './base.html.twig' %}

{% block title %}{{ parent() }} | Training | Add{% endblock %}

{% block content %}
    <div class="pt-[14rem] pb-[28.45rem]">
        {{ form_start(form, {
            "attr": {"class": "w-fit mx-auto bg-gray-200 px-6 py-4 rounded"}
        }) }}
        {{ form_row(form.name, {
            label: 'Name',
            attr: {'class': 'flex px-3 py-2 border-2 focus:outline-none border-primary focus:border-primary active:border-primaryDark'}
        }) }}
        {{ form_row(form.image, {
            label: 'Image',
            attr: {'class': 'flex px-3 py-2 focus:outline-none'}
        }) }}
        {{ form_row(form.add, {
            attr: {'class': 'flex px-3 py-2 bg-green-600 text-white rounded hover:bg-green-700 transition-all'}
        }) }}
        {{ form_end(form) }}
    </div>
{% endblock %}
